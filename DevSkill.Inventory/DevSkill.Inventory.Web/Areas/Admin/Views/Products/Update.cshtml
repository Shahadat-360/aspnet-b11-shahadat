@using DevSkill.Inventory.Application.Features.Products.Commands
@model ProductUpdateCommand
@{
    ViewData["Title"] = "Update Product";
}
<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Update Product</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Update Product</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row g-4">
            <!--begin::Col-->
            <div class="col-12">
                <partial name="_ResponsePartial" />
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-md-6">
                <!--begin::Quick Example-->
                <div class="card card-primary card-outline mb-4">
                    <!--begin::Header-->
                    <div class="card-header"><div class="card-title">Update Product</div></div>
                    <!--end::Header-->
                    <!--begin::Form-->
                    <form asp-antiforgery="true" asp-action="Update" asp-controller="Products" method="post" asp-area="Admin">
                        <!--begin::Body-->
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Product Name</label>
                                <input type="text" asp-for="Name"
                                       class="form-control"
                                       aria-describedby="nameHelp" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div id="nameHelp" class="form-text">
                                    Provide a Name.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Product Description</label>
                                <input type="text" asp-for="Description"
                                       class="form-control"
                                       aria-describedby="DescriptionHelp" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div id="DescriptionHelp" class="form-text">
                                    Update Your Description.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Product Price</label>
                                <input type="number" asp-for="Price"
                                       class="form-control"
                                       aria-describedby="PriceHelp" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <div id="PriceHelp" class="form-text">
                                    Update Product Price
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Product Quantity</label>
                                <input type="number" asp-for="Quantity"
                                       class="form-control"
                                       aria-describedby="QuantityHelp" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <div id="QuantityHelp" class="form-text">
                                    Update Product Quantity
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <input type="text" class="form-control" asp-for="CategoryId" />
                            </div>
                        </div>
                        <!--end::Body-->
                        <!--begin::Footer-->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <!--end::Footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Quick Example-->
            </div>
            <!--end::Col-->
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content-->
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}