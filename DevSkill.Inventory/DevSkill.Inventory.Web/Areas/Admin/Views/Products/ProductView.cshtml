@using System.Globalization
@model DevSkill.Inventory.Domain.Dtos.ProductViewDto  
@{  
    ViewData["Title"] = "Product Details"; 
}   

<div class="container my-4"> 
    <div class="card">  
        <div class="card-header bg-light">  
            <h3 class="mb-0">Product Details</h3>  
        </div>  
        <div class="card-body">  
            <div class="row">  
                <div class="col-md-4 text-center">  
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))  
                    {  
                        <img src="~/@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" />  
                    }  
                    else  
                    {  
                        <div class="border rounded p-5 text-muted">  
                            No Image Available  
                        </div>  
                    }  
                </div>  

                <!-- Product Info -->  
                <div class="col-md-8">  
                    <table class="table">  
                        <tbody>  
                            <tr>  
                                <th scope="row">ID:</th>  
                                <td>@Model.Id</td>  
                            </tr>  
                            <tr>  
                                <th scope="row">Name:</th>  
                                <td>@Model.Name</td>  
                            </tr>  
                            <tr>  
                                <th scope="row">Category:</th>  
                                <td>@Model.CategoryName</td>  
                            </tr>  
                            <tr>  
                                <th scope="row">Unit:</th>  
                                <td>@Model.UnitName</td>  
                            </tr>  
                            <tr>
                                <th scope="row">Purchase Price:</th>
                                <td>@Model.PurchasePrice.ToString("N2") TK</td>
                            </tr>
                            <tr>
                                <th scope="row">Wholesale Price:</th>
                                <td>@Model.WholesalePrice.ToString("N2") TK</td>
                            </tr>
                            <tr>
                                <th scope="row">MRP:</th>
                                <td>@Model.MRP.ToString("N2") TK</td>
                            </tr>
                            <tr>  
                                <th scope="row">Stock:</th>  
                                <td>@Model.Stock</td>  
                            </tr>  
                            <tr>  
                                <th scope="row">Low Stock Threshold:</th>  
                                <td>@Model.LowStock</td>  
                            </tr>  
                            <tr>  
                                <th scope="row">Damage Stock:</th>  
                                <td>@Model.DamageStock</td>  
                            </tr>  
                        </tbody>  
                    </table>  
                </div>  
            </div>  
            <div class="row">
                <div class="d-flex justify-content-center mt-4"> 
                    <a asp-action="Index" asp-controller="Products" asp-area="Admin" class="btn btn-primary">  
                        <i class="bi bi-arrow-left"></i> Back to List  
                    </a>
                </div>  
            </div>
        </div>
    </div>  
</div>
