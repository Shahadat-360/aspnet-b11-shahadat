    <!-- Global 401 Error Handler -->
    <script>
        $(document).ready(function() {
            // Global handler for all AJAX requests - handles HTTP 401 status codes
            $(document).ajaxComplete(function(event, xhr, settings) {
                if (xhr.status === 401) {
                    window.location.href = "/Account/AccessDenied";
                }
            });

            // Also handle response body 401 status globally - for custom Status: "401" in response
            $(document).ajaxSuccess(function(event, xhr, settings) {
                try {
                    var response = JSON.parse(xhr.responseText);
                    if (response.Status === "401") {
                        window.location.href = "/Account/AccessDenied";
                    }
                } catch(e) {
                    // Not JSON response or no Status property, ignore
                }
            });
        });
    </script>
    <!-- End Global 401 Error Handler -->
