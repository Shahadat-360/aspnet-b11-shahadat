@functions{
    public string IsActive(string controller,string? area= null)
    {
        string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        string? currentArea = ViewContext.RouteData.Values["area"]?.ToString();

        return (currentController == controller &&
                currentArea == area) ? "active" : "";
    }
}
<!-- end::Active Menu Helper -->

