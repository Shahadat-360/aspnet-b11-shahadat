@using DevSkill.Inventory.Application.Features.MobileAccounts.Commands
@using DevSkill.Inventory.Domain.Enums
@model MobileAccountAddCommand
@{
    ViewData["Title"] = "Mobile Account Add";
}

<div class="modal fade" id="MobileAccountModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="MobileAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Mobile Account Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Add" asp-controller="MobileAccounts" asp-area="Admin"
                  method="post" asp-antiforgery="true">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="AccountName" class="form-label">Account Name</label>
                            <input type="text" asp-for="AccountName" class="form-control" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AccountNumber" class="form-label">Account No</label>
                            <input type="number" asp-for="AccountNumber" class="form-control" />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AccountOwner" class="form-label">Account Owner</label>
                            <input type="text" asp-for="AccountOwner" class="form-control" />
                            <span asp-validation-for="AccountOwner" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="OpeningBalance" class="form-label">Opening Balance</label>
                            <input type="number" step="0.01" asp-for="OpeningBalance" class="form-control" />
                            <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label">Status</label>
                            <div class="position-relative">
                                <select asp-for="Status" class="form-select pe-5" asp-items="Html.GetEnumSelectList<Status>()">
                                    <option value="">-- Select Status --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />