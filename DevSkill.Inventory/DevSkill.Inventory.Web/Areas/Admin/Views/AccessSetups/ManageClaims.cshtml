@using DevSkill.Inventory.Domain.Dtos
@model List<RoleClaimsDto>
@{
    ViewData["Title"] = "Manage Access";
    var groupedClaims = Model.GroupBy(x => x.ClaimType);
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Manage Access </h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" asp-area="Admin">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Access Setup</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <div class="container-fluid">
        <partial name="_ResponsePartial" />
        <!-- Space between cards -->
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header d-flex">
                        <h3 class="card-title"> Access Setup List </h3>
                    </div>
                    <div class="card-body">
                        <partial name="_ModalPartial" />
                        <form asp-action="ManageClaims" method="post">
                        <input type="hidden" asp-for="@Model.First().RoleId" name="RoleId" value="@Model.First().RoleId" />

                        <div class="row">
                            @foreach (var group in groupedClaims)
                            {
                                <div class="col-md-3">
                                    <div class="card mb-3">
                                        <div class="card-header bg-secondary text-white">
                                            @group.Key Permissions
                                        </div>
                                        <div class="card-body">
                                        @foreach (var claim in group)
                                        {
                                            <div class="form-check">
                                                <input type="checkbox"
                                                       class="form-check-input"
                                                       name="SelectedClaims"
                                                       value="@claim.ClaimValue"
                                                       @(claim.Selected ? "checked" : "") />
                                                <label class="form-check-label">@claim.ClaimValue</label>
                                            </div>
                                        }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="btn btn-danger" asp-action="Index" asp-area="Admin" asp-controller="AccessSetups">Back To List</a>
                        <button type="submit" class="btn btn-primary">Update Claims</button>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Row-->
    </div>
</div>
<!--end::App Content-->














