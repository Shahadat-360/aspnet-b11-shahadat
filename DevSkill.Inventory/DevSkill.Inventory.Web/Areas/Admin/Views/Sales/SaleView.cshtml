@model DevSkill.Inventory.Domain.Dtos.SaleDto;
@{
    ViewData["Title"] = "SaleView";
}
@section Styles{
}
    <style>
        .inv {
        padding: 30px;
        background: #f5f5f5;
        color: black;
        border-radius: 30px;
        font-size: larger;
        }
    </style>
<div class="app-content">
    <div class="container-fluid">
        <div class="card mt-2">
            <div class="card-header">
                <h4 class="mb-0">Sale Information</h4>
            </div>
            <div class="card-body" id="printableCard">
                <div class="row">
                    <div class="col-sm-4">
                        <partial name="_WebsiteLogoPartial" />
                    </div>
                    <div class="col-sm-4 text-center">
                        <partial name="_CompanyDetailsPartial" />
                    </div>
                    <div class="col-sm-4"></div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-4">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="fw-bold">Order Date #</td>
                                    <td>@Model.SaleDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Order Time #</td>
                                    <td>@Model.SaleTime.ToString("hh:mm tt")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Company #</td>
                                    <td>@Model.Customer.CompanyName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Salesperson #</td>
                                    <td>Unknown</td>
                                </tr>
                        </table>
                    </div>
                    <div class="col-sm-4 d-flex justify-content-center align-items-center">
                        <p class="text-center inv fw-bold">Sale Invoice</p>
                    </div>
                    <div class="col-sm-4">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="fw-bold">Invoice No #</td>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Customer Name #</td>
                                    <td>@Model.Customer.CustomerName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Address #</td>
                                    <td>@Model.Customer.Address</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Contact No #</td>
                                    <td>@Model.Customer.Mobile</td>
                                </tr>
                        </table>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <table class="table table-striped text-center">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var saleItems = Model.SaleItems.ToList();
                                    for(int i=0;i<Model.SaleItems.Count;i++)
                                    {
                                        <tr>
                                            <td>@(i+1)</td>
                                            <td>@saleItems[i].Product.Name</td>
                                            <td>@saleItems[i].Quantity</td>
                                            <td>@saleItems[i].Product.Unit.Name</td>
                                            <td>@saleItems[i].UnitPrice</td>
                                            <td>@saleItems[i].SubTotal</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tbody>
                            <tr>
                                <td colspan="5" class="text-end">VAT</td>
                                <td>@Model.VatPercentage %</td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-end">Net Total</td>
                                <td>@Model.NetAmmount</td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-end">Discount</td>
                                <td>@Model.Discount</td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-end">Total Amount</td>
                                <td>@Model.Total </td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-end">Paid Amount</td>
                                <td>@Model.Paid </td>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-end">Current Due</td>
                                <td>@Model.Due </td>
                            </tr>
                        </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button id="printSalesPage" class="btn btn-secondary me-2 d-print-none">
                            <i class="bi bi-printer-fill"></i> Print
                        </button>
                        <a class="btn btn-danger d-print-none" asp-action="Index" asp-area="Admin" asp-controller="Sales"> 
                            <i class="bi bi-arrow-left"></i>
                            Back</a>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <!-- printThis CSS/JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/printThis/1.15.0/printThis.min.js" 
    integrity="sha512-d5Jr3NflEZmFDdFHZtxeJtBzk0eB+kkRXWFQqEc1EKmolXjHm2IKCA7kTvXBNjIYzjXfD5XzIjaaErpkZHCkBg==" 
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <script>
          $('#printSalesPage').on('click', function() {
          $('#printableCard').printThis({
            importCSS: true,
            importStyle: true,
            loadCSS: [
              'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
            ],
            copyTagClasses: true,
                    header: `
          <style>
            @@media print {
              body {
                zoom: 80%; /* zoom out */
                font-size: 0.85rem !important; /* smaller text */
              }
               .inv {
                    padding: 30px !important;
                    font-size: 1rem !important;
                }
              table th, table td {
                font-size: 0.75rem !important;
                padding: 2px 6px !important;
              }
            }
          </style>
        `,
            removeInline: false,
            printDelay: 333
          });
        });

    </script>
}